# SYSTEMD unit file.

[Unit]
Description=Packet Dump Utility
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/sbin/rcap -c /etc/rcap.toml
KillSignal=SIGINT
Restart=on-failure

# Do NOT use /bin/kill ${MAINPID} to kill the rcap process gracefully.
#ExecStop=/bin/kill ${MAINPID}

[Install]
WantedBy=multi-user.target
